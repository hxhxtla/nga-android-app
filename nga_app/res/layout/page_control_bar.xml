<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_left" />

    <ImageButton
        android:id="@+id/bar_btn_top"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:src="@drawable/btn_top" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separator" />

    <ImageButton
        android:id="@+id/bar_btn_pre"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:src="@drawable/btn_pre" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separator" />

    <Button
        android:id="@+id/bar_btn_refresh"
        android:layout_width="37dp"
        android:layout_height="38dp"
        android:background="@drawable/btn_refresh"
        android:gravity="center" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separator" />

    <ImageButton
        android:id="@+id/bar_btn_next"
        android:layout_width="37dp"
        android:layout_height="42dp"
        android:src="@drawable/btn_next" />

    <ImageView
        android:id="@+id/bar_separator_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/separator" />

    <ImageButton
        android:id="@+id/bar_btn_end"
        android:layout_width="32dp"
        android:layout_height="42dp"
        android:src="@drawable/btn_bottom" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_right" />

</LinearLayout>